{
    "routes": 
    [
        {
            "path": "/api/status",
            "method": "GET",
            "authorization": "false",
            "name": "status",
            "controller": "\\Src\\Infrastructure\\Controller\\StatusController"
        },
        {
            "path": "/api/auth",
            "method": "POST",
            "authorization": "false",
            "name": "auth",
            "controller": "\\Src\\Infrastructure\\Controller\\AuthController",
            "params": [
                "\\Src\\Infrastructure\\Persistence\\Repository\\UserRepository"
            ]
        },
        {
            "path": "/api/tarjeta",
            "method": "POST",
            "authorization": "true",
            "name": "create-tarjeta",
            "controller": "\\Src\\Infrastructure\\Controller\\Tarjeta\\CreateController",
            "params": [
                "\\Src\\Infrastructure\\Persistence\\Repository\\TarjetaRepository"
            ]
        },
        {
            "path": "/api/farmacia",
            "method": "POST",
            "authorization": "true",
            "name": "create-farmacia",
            "controller": "\\Src\\Infrastructure\\Controller\\Farmacia\\CreateController",
            "params": [
                "\\Src\\Infrastructure\\Persistence\\Repository\\FarmaciaRepository"
            ]
        },
        {
            "path": "/api/farmacia",
            "query": "?lat={latitud}&lon={longitud}",
            "method": "GET",
            "authorization": "true",
            "name": "get-farmacia-by-query-string",
            "controller": "\\Src\\Infrastructure\\Controller\\Farmacia\\GetClosestFarmaciaController",
            "params": [
                "\\Src\\Infrastructure\\Persistence\\Repository\\FarmaciaRepository",
                "\\Src\\Domain\\Service\\CoordinateDistanceService"
            ]
        }
    ]
}